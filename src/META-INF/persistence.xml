<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="DrogueriaPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>drogueria.persistencia.ConsultaMed</class>
    <class>drogueria.persistencia.Categoria</class>
    <class>drogueria.persistencia.Cliente</class>
    <class>drogueria.persistencia.Descripcion</class>
    <class>drogueria.persistencia.FacturaVenta</class>
    <class>drogueria.persistencia.ItemVenta</class>
    <class>drogueria.persistencia.Laboratorio</class>
    <class>drogueria.persistencia.LaboratorioDescMed</class>
    <class>drogueria.persistencia.LaboratorioDescMedVenta</class>
    <class>drogueria.persistencia.Lote</class>
    <class>drogueria.persistencia.Medicamento</class>
    <class>drogueria.persistencia.Roll</class>
    <class>drogueria.persistencia.Usuario</class>
    <class>drogueria.persistencia.ConfiguracionSistema</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/drogueria?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
    </properties>
  </persistence-unit>
</persistence>
